<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/btn_survey_option_ripple">
    <item>
        <selector>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_survey_option_solid"/>
                    <corners android:radius="5dp"/>
                    <stroke android:width="3dp" android:color="@color/btn_survey_option_stroke"/>
                </shape>
            </item>

            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_survey_option_solid"/>
                    <corners android:radius="5dp"/>
                    <stroke android:width="3dp" android:color="@color/btn_survey_option_stroke"/>
                </shape>
            </item>

        </selector>
    </item>
</ripple>