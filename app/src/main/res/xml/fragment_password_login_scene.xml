<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyCycle
               motion:motionTarget="@+id/textView_loginTip"
               motion:framePosition="0"
               motion:wavePeriod="2"
               motion:waveShape="bounce"
               android:translationX="10dp"
               motion:waveOffset="0dp" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/textView_loginTip"
            motion:layout_constraintEnd_toStartOf="@+id/guideline68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore"
            motion:layout_constraintBottom_toTopOf="@+id/guideline61"
            motion:layout_constraintTop_toTopOf="@+id/guideline60"
            motion:layout_constraintStart_toStartOf="@+id/guideline66" />
        <Constraint
            android:id="@+id/progressBar_login"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.4"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/textView_loginTip"
            motion:layout_constraintEnd_toStartOf="@+id/guideline68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore"
            motion:layout_constraintBottom_toTopOf="@+id/guideline61"
            motion:layout_constraintTop_toTopOf="@+id/guideline60"
            motion:layout_constraintStart_toStartOf="@+id/guideline66" />
        <Constraint
            android:id="@+id/progressBar_login"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:visibilityMode="ignore"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.4"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>