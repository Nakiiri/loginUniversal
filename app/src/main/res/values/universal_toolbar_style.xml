<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="universal_toolbar_style" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tool_bar_height</item>
        <item name="minHeight">@dimen/tool_bar_height</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="navigationIcon">@drawable/ic_baseline_keyboard_arrow_left_back</item>
    </style>

    <style name="universal_toolbar_title_style" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/toolbar_title</item>
    </style>
    

</resources>